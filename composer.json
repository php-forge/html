{
    "name": "php-forge/html",
    "type": "library",
    "description": "Awesome HTML Code Generator for PHP.",
    "keywords": [
        "php-forge",
        "awesome",
        "html",
        "php"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "php-forge/support": "^1.0@dev",
        "phpunit/phpunit": "^10.0",
        "roave/infection-static-analysis-plugin": "^1.28",
        "vimeo/psalm": "^5.8"
    },
    "autoload": {
        "psr-4": {
            "PHPForge\\Html\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPForge\\Html\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
