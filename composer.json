{
    "name": "php-forge/html",
    "type": "library",
    "description": "Awesome HTML Code Generator for PHP.",
    "keywords": [
        "php-forge",
        "awesome",
        "html",
        "php"
    ],
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "php-forge/awesome-widget": "^1.0@dev",
        "voku/anti-xss": "^4.1"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "php-forge/support": "^1.0@dev",
        "phpunit/phpunit": "^10.5",
        "roave/infection-static-analysis-plugin": "^1.3",
        "symplify/easy-coding-standard": "^11.5",
        "vimeo/psalm": "^5.18"
    },
    "autoload": {
        "psr-4": {
            "PHPForge\\Html\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPForge\\Html\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "easy-coding-standard": "ecs check",
        "mutation": [
            "Composer\\Config::disableProcessTimeout",
            "roave-infection-static-analysis-plugin"
        ],
        "psalm": "psalm",
        "test": "phpunit"
    },
    "repositories": [
        {
            "type": "vcs",
            "name": "php-forge/awesome-widget",
            "url": "https://github.com/php-forge/awesome-widget",
            "branch": "main"
        }
    ]
}
